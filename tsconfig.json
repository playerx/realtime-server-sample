{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"noImplicitAny": false,
		"sourceMap": false,
		"declaration": true,
		"moduleResolution": "node",
		"rootDir": "src",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"outDir": "dist",
		"lib": [
			"esnext"
		]
	},
	"exclude": [
		"node_modules",
		"examples",
		"dist"
	]
}
